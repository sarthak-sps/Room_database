<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:backgroundTint="@color/black"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
           >

            <TextView
                android:id="@+id/contactName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Sarthak"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <ImageView
                android:id="@+id/phoneIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_call_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contactName"
                android:layout_marginVertical="20dp"
                />

            <ImageView
                android:id="@+id/emailIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phoneIcon"
                android:layout_marginTop="10dp"
                android:src="@drawable/outline_email_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phoneIcon"
                />

            <TextView
                android:id="@+id/phonetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contactName"
                android:layout_marginStart="20dp"
                app:layout_constraintLeft_toRightOf="@+id/phoneIcon"
                app:layout_constraintTop_toTopOf="@+id/phoneIcon"
                app:layout_constraintBottom_toBottomOf="@+id/phoneIcon"
                android:text="21434434"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/emailtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phonetext"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@+id/emailIcon"
                android:text="sarthak@gmail.com"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintLeft_toRightOf="@+id/emailIcon"
                app:layout_constraintTop_toTopOf="@+id/emailIcon"
                app:layout_constraintBottom_toBottomOf="@+id/emailIcon"
                android:textColor="@color/white"
                />

            <ImageView
                android:id="@+id/editIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/outline_edit_24"
                app:layout_constraintStart_toStartOf="@+id/emailtext"
                app:layout_constraintTop_toBottomOf="@+id/emailtext"
                android:layout_marginVertical="20dp"


                />

            <TextView
                android:id="@+id/edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="start"
                android:text="Edit"
                android:textSize="14sp"
                android:textColor="@color/white"
                app:layout_constraintLeft_toRightOf="@+id/editIcon"
                app:layout_constraintTop_toTopOf="@+id/editIcon"
                app:layout_constraintBottom_toBottomOf="@+id/editIcon"

                />

            <ImageView
                android:id="@+id/deleteIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/baseline_delete_24"
                app:layout_constraintLeft_toRightOf="@+id/edittext"
                app:layout_constraintTop_toBottomOf="@+id/emailtext"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"


                />

            <TextView
                android:id="@+id/deletetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:gravity="start"
                android:text="Delete"
                android:textSize="14sp"
                android:textColor="@color/white"
                app:layout_constraintLeft_toRightOf="@+id/deleteIcon"
                app:layout_constraintTop_toTopOf="@+id/deleteIcon"
                app:layout_constraintBottom_toBottomOf="@+id/deleteIcon"

                />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>